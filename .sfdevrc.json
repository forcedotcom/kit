{
  "wireit": {
    "compile-esm": {
      "command": "tsc --module es2022 --outDir esm ; cp scripts/esmPjson.json lib/package.json",
      "files": ["src/**/*.ts", "**/tsconfig.json", "messages/**"],
      "output": ["esm/**", "*.tsbuildinfo"],
      "clean": "if-file-deleted"
    },
    "compile-cjs": {
      "command": "tsc --module commonjs --outDir lib ; cp scripts/cjsPjson.json lib/package.json",
      "files": ["src/**/*.ts", "**/tsconfig.json", "messages/**"],
      "output": ["lib/**", "*.tsbuildinfo"],
      "clean": "if-file-deleted"
    },
    "compile": {
      "dependencies": ["compile-esm", "compile-cjs"]
    },
    "lint": {
      "command": "eslint src test --color",
      "files": ["src/**/*.ts", "test/**/*.ts", "messages/**", "**/.eslint*", "**/tsconfig.json"],
      "output": []
    }
  }
}
